<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCriptografia.Views.pgUsuarioListaView"
             Title="pgUsuarioListaView">
    <StackLayout Padding="5">
        <StackLayout HorizontalOptions="Center"
                     Margin="0, 10">
            <Label Text="UsuÃ¡rios"
                   FontSize="25"/>
        </StackLayout>

        <StackLayout>
            <Button x:Name="btnCadastrar2"
                    Text="Cadastrar"
                    BackgroundColor="#333"
                    FontSize="20"
                    TextColor="White"
                    Clicked="btnCadastrar_Clicked"/>

            <Button x:Name="btnAualizar"
                    Text="Atualizar"
                    BackgroundColor="Purple"
                    FontSize="20"
                    TextColor="White"
                    Clicked="btnAtualizar"/>
        </StackLayout>

        <ListView x:Name="lstUsuarios">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame CornerRadius="10"
                               Padding="10"
                               Margin="5"
                               BackgroundColor="#414142"
                               MinimumHeightRequest="50">
                            <StackLayout Orientation="Horizontal">
                                <StackLayout HorizontalOptions="FillAndExpand">
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding ID}"
                                               FontAttributes="Bold"
                                               FontSize="20"/>
                                        <Label Text="-" Margin="5, 0"
                                               VerticalTextAlignment="Center"/>
                                        <Label Text="{Binding Nome}"
                                               FontAttributes="Bold"
                                               FontSize="20"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Email:"/>
                                        <Label Text="{Binding Email}"
                                               Margin="5, 0"/>
                                    </StackLayout>
                                </StackLayout>
                                <StackLayout HorizontalOptions="End"
                                             VerticalOptions="Start"
                                             Orientation="Horizontal">
                                    <Image Source="icon_deletar.png"
                                           HeightRequest="30"
                                           WidthRequest="30"
                                           Margin="5, 0">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="tapDeletar"
                                                                  CommandParameter="{Binding .}"/>
                                        </Image.GestureRecognizers>
                                    </Image>

                                    <Image Source="icon_visualizar.png"
                                           HeightRequest="30"
                                           WidthRequest="30"
                                           Margin="5, 0">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="tapVisualizar"
                                                                  CommandParameter="{Binding .}"/>
                                        </Image.GestureRecognizers>
                                    </Image>

                                    <Image Source="icon_editar.png"
                                           HeightRequest="30"
                                           WidthRequest="30"
                                           Margin="5, 0">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="tapEditar"
                                                                  CommandParameter="{Binding .}"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                </StackLayout>                                
                            </StackLayout>                          
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </StackLayout>
</ContentPage>